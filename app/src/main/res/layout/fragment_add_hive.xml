<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.managehives.AddHive"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:gravity="center">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/hive"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        android:text="Add Hive"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <TableLayout
        android:id="@+id/addHiveTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/table_row_top_bottom_margins"
            android:layout_marginBottom="@dimen/table_row_top_bottom_margins">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize_addHive"
                android:text="Health: "
                android:padding="@dimen/tablePadding_addHive"/>

            <EditText
                android:id="@+id/editTextNumberDecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType=""
                android:background="@color/colorFragmentBackground"
                android:padding="@dimen/tablePadding_addHive"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/table_row_top_bottom_margins"
            android:layout_marginBottom="@dimen/table_row_top_bottom_margins">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize_addHive"
                android:text="Honey Stores: "
                android:padding="@dimen/tablePadding_addHive"/>

            <EditText
                android:id="@+id/editTextNumberDecimal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="@dimen/tablePadding_addHive"
                android:inputType="numberDecimal"
                android:background="@color/colorFragmentBackground"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/table_row_top_bottom_margins"
            android:layout_marginBottom="@dimen/table_row_top_bottom_margins">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="@dimen/tablePadding_addHive"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize_addHive"
                android:text="Queen Production: " />

            <EditText
                android:id="@+id/editTextNumberDecimal3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:padding="@dimen/tablePadding_addHive"
                android:background="@color/colorFragmentBackground"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/table_row_top_bottom_margins"
            android:layout_marginBottom="@dimen/table_row_top_bottom_margins">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:padding="@dimen/tablePadding_addHive"
                android:textSize="@dimen/textSize_addHive"
                android:text="Gains: " />

            <EditText
                android:id="@+id/editTextNumberDecimal4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="@dimen/tablePadding_addHive"
                android:inputType="numberDecimal"
                android:background="@color/colorFragmentBackground"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/table_row_top_bottom_margins"
            android:layout_marginBottom="@dimen/table_row_top_bottom_margins">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:padding="@dimen/tablePadding_addHive"
                android:textSize="@dimen/textSize_addHive"
                android:text="Losses: " />

            <EditText
                android:id="@+id/editTextNumberDecimal5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="@dimen/tablePadding_addHive"
                android:inputType="numberDecimal"
                android:background="@color/colorFragmentBackground"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/table_row_top_bottom_margins"
            android:layout_marginBottom="@dimen/table_row_top_bottom_margins">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:padding="@dimen/tablePadding_addHive"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize_addHive"
                />

            <EditText
                android:id="@+id/editTextTextPostalAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="@dimen/tablePadding_addHive"
                android:inputType="textPostalAddress"
                android:background="@color/colorFragmentBackground"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/table_row_top_bottom_margins"
            android:layout_marginBottom="@dimen/table_row_top_bottom_margins"
            >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="@dimen/tablePadding_addHive"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize_addHive"
                android:text="Zip Code: " />

            <EditText
                android:id="@+id/editTextTextPostalAddress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="@dimen/tablePadding_addHive"
                android:inputType="textPostalAddress"
                android:background="@color/colorFragmentBackground"/>


        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/tablePadding_addHive"
        android:background="@drawable/dark_button"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/textsize_button"
        android:text="Add"
        />

</LinearLayout>