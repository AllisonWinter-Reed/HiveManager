<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_editProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_cyan"
    android:clickable="true"
    android:gravity="center"
    tools:context=".ui.profile.EditProfileFragment">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/addprofilepic"
        android:textSize="25sp"
        android:onClick="registerProfilePic"/>

        <TableLayout
            android:id="@+id/editProfileTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/table_row_top_bottom_margins"
                android:layout_marginBottom="@dimen/table_row_top_bottom_margins">
                <TextView
                    android:id="@+id/username_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textSize_addHive"
                    android:layout_weight="1"
                    android:text="Username: "
                    android:padding="@dimen/tablePadding_addHive"/>

                <TextView
                    android:id="@+id/etUsernameProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:layout_weight="4"
                    android:padding="@dimen/tablePadding_addHive"
                    android:text="username" />
                <!--                    android:background="@drawable/hive_status_box"-->
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/table_row_top_bottom_margins"
                android:layout_marginBottom="@dimen/table_row_top_bottom_margins">
                <TextView
                    android:id="@+id/firstName_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textSize_addHive"
                    android:layout_weight="1"
                    android:text="First name: "
                    android:padding="@dimen/tablePadding_addHive"/>

                <EditText
                    android:id="@+id/etFirstNameProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:layout_weight="4"
                    android:background="@drawable/hive_status_box"
                    android:padding="@dimen/tablePadding_addHive"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/table_row_top_bottom_margins"
                android:layout_marginBottom="@dimen/table_row_top_bottom_margins">
                <TextView
                    android:id="@+id/lastName_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textSize_addHive"
                    android:layout_weight="1"
                    android:text="Last name: "
                    android:padding="@dimen/tablePadding_addHive" />
                <EditText
                    android:id="@+id/etLastNameProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="4"
                    android:background="@drawable/hive_status_box"
                    android:padding="@dimen/tablePadding_addHive" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/table_row_top_bottom_margins"
                android:layout_marginBottom="@dimen/table_row_top_bottom_margins">
                <TextView
                    android:id="@+id/address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textSize_addHive"
                    android:layout_weight="1"
                    android:text="Address: "
                    android:padding="@dimen/tablePadding_addHive"/>

                <EditText
                    android:id="@+id/etAddressProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:layout_weight="4"
                    android:background="@drawable/hive_status_box"
                    android:padding="@dimen/tablePadding_addHive"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/table_row_top_bottom_margins"
                android:layout_marginBottom="@dimen/table_row_top_bottom_margins">
                <TextView
                    android:id="@+id/cityState_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textSize_addHive"
                    android:layout_weight="1"
                    android:text="City, State: "
                    android:padding="@dimen/tablePadding_addHive"/>

                <TextView
                    android:id="@+id/cityState_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="4"
                    android:padding="@dimen/tablePadding_addHive"
                    android:text="@string/madison_wi"/>
<!--                    android:background="@drawable/hive_status_box"-->
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/table_row_top_bottom_margins"
                android:layout_marginBottom="@dimen/table_row_top_bottom_margins">
                <TextView
                    android:id="@+id/zipCode_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textSize_addHive"
                    android:layout_weight="1"
                    android:text="Zip code: "
                    android:padding="@dimen/tablePadding_addHive"/>

                <EditText
                    android:id="@+id/etZipProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="4"
                    android:inputType="number"
                    android:background="@drawable/hive_status_box"
                    android:padding="@dimen/tablePadding_addHive"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/table_row_top_bottom_margins"
                android:layout_marginBottom="@dimen/table_row_top_bottom_margins">
                <TextView
                    android:id="@+id/phone_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textSize_addHive"
                    android:layout_weight="1"
                    android:text="Phone: "
                    android:padding="@dimen/tablePadding_addHive"/>

                <EditText
                    android:id="@+id/etPhoneNumberProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="4"
                    android:inputType="phone"
                    android:background="@drawable/hive_status_box"
                    android:padding="@dimen/tablePadding_addHive"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/table_row_top_bottom_margins"
                android:layout_marginBottom="@dimen/table_row_top_bottom_margins">
                <TextView
                    android:id="@+id/email_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textSize_addHive"
                    android:layout_weight="1"
                    android:text="Email: "
                    android:padding="@dimen/tablePadding_addHive"/>

                <EditText
                    android:id="@+id/etEmailProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="4"
                    android:background="@drawable/hive_status_box"
                    android:padding="@dimen/tablePadding_addHive"/>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/bSaveProfile"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>